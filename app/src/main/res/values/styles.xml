<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--Style for Main Screen-->
    <style name="OrangeScreenTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>

    <style name="LoginWhite" parent="OrangeScreenTheme">
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/design_default_color_primary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/common_google_signin_btn_text_light_focused</item>
        <!-- Used for the background -->
        <item name="android:background">@drawable/dialog_bg</item>
    </style>

    <style name="MainActivityTheme" parent="OrangeScreenTheme">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="FullscreenDialogTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
    <!-- Used for the buttons -->
    <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>

    <style name="PaymentTheme" parent="AppTheme">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    </style>

    <!-- rave-->


    <style name="tabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/tabIndicatorColor</item>
    </style>

    <style name="tabLayoutStyle2" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#607d8b</item>
    </style>

    <style name="otpHeaderStyle">
        <item name="android:background">@color/otpColorTheme</item>
    </style>

    <style name="pinHeaderStyle">
        <item name="android:background">@color/pinColorTheme</item>
    </style>

    <style name="otpBtnStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/otp_button_curved</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="pinButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/otp_button_curved</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="svdCardsBtnStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/blue_btn_curved</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="payBtnStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/green_btn_curved</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="OTPButtonStyle">@style/otpBtnStyle</item>
        <item name="PayButtonStyle">@style/payBtnStyle</item>
        <item name="PinButtonStyle">@style/pinButtonStyle</item>
        <item name="OTPHeaderStyle">@style/otpHeaderStyle</item>
        <item name="TabLayoutStyle">@style/tabLayoutStyle</item>
        <item name="PinHeaderStyle">@style/pinHeaderStyle</item>
        <item name="SavedCardButtonStyle">@style/svdCardsBtnStyle</item>
    </style>

    <style name="otpHeaderStyle2">
        <item name="android:background">#5d4037</item>
    </style>

    <style name="pinHeaderStyle2">
        <item name="android:background">#37474f</item>
    </style>

    <style name="otpBtnStyle2" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/otp_button_curved</item>
        <item name="android:textColor">#009688</item>
    </style>

    <style name="svdCardsBtnStyle2" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/blue_btn_curved</item>
        <item name="android:textColor">#039be5</item>
    </style>

    <style name="payBtnStyle2" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/green_btn_curved</item>
        <item name="android:textColor">#bcaaa4</item>
    </style>




    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParent.headerText">
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParent.headerText.NoMode">
        <item name="android:textColor">@color/darkTextColor</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">@dimen/newsMoreTextSize</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/button_background_blue</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnerHintText" parent="parent">
        <item name="android:textSize">@dimen/newsMoreTextSize</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingLeft">5dp</item>
    </style>


</resources>
